extends ../layouts/common
block title
	title Create User Demo	
block content 
		div.container
			.row
				h1(class="display-1") Create a new user
			.row.d-flex
				div.col-md-4
					if errors
						each error in errors
							.alert.alert-danger= error
					form(action="/user/create", method="POST")
						div(class="form-group")
							label(for="name") User Name
							input#name(type="text", name="name", class="form-control", value= values?values.name:"")
						div(class="form-group")
							label(for="phone") Phone Number
							input#phone(type="number", name="phone", class="form-control", value= values?values.phone:"")
						div(class="form-group")
							label(for="email") Email
							input#email(type="text", name="email", class="form-control", value= values?values.email:"")
						div(class="form-group")
							label(for="password") Password
							input#password(type="password", name="password", class="form-control", value= values?values.password:"")
						button(type="submit", class="btn btn-primary btn-block") Create