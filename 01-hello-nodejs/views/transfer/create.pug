extends ../layouts/common
block title
	title Form Money Create
block content 
		div.container
			.row
				h1(class="display-1") Form Transfer
			.row.d-flex
				div.col-md-4
					if errors
						each error in errors
							.alert.alert-danger= error
					form(method="POST")
						input(type="hidden", name="_csrf", value=csrfToken)
						div(class="form-group")
							label(for="account") Account
							input#account(type="text", name="account", class="form-control")
						div(class="form-group")
							label(for="amount") Amount
							input#amount(type="number", name="amount", class="form-control")
						button(type="submit", class="btn btn-primary btn-block") Transfer