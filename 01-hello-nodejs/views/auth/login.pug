extends ../layouts/common
block title
	title Page Login	
block content 
		div.container
			.row
				h1(class="display-1") Login
			.row.d-flex
				div.col-md-4
					if errors
						each error in errors
							.alert.alert-danger= error
					form(method="POST")
						div(class="form-group")
							label(for="email") Email
							input#email(type="text", name="email", class="form-control", value= values?values.email:"")
						div(class="form-group")
							label(for="password") Password
							input#password(type="password", name="password", class="form-control")
						button(type="submit", class="btn btn-primary btn-block") Login